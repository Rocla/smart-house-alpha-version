<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.he.arc.romain.claret.p1.g5.alpha.MainPage">

    <ImageButton
        android:id="@+id/bHideCompleteMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/bQSettings"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:src="@drawable/abc_ic_cab_done_holo_light" />

    <ImageButton
        android:id="@+id/bQHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/logo_fist"
        android:clickable="true"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/bQUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/bQHome"
        android:background="@drawable/people"
        android:clickable="true"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/bQDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/bQUsers"
        android:background="@drawable/device_manager"
        android:clickable="true"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/bQNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/bQDevices"
        android:background="@drawable/stock_notes"
        android:clickable="true"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/bQSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/bQNotes"
        android:background="@drawable/system_config_services"
        android:clickable="true"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:visibility="invisible" />

    <Switch
        android:id="@+id/sEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:checked="false"
        android:text="Edit Quick Menu" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bHideCompleteMenu"
        android:layout_alignLeft="@+id/sEdit"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/sEdit"
        android:layout_below="@+id/sEdit">

        <ImageView
            android:id="@+id/iMenu1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_column="22"
            android:layout_row="0"
            android:src="@drawable/logo_fist" />

        <Button
            android:id="@+id/bAHome"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="23"
            android:layout_row="0"
            android:text="Home" />

        <ImageView
            android:id="@+id/iMenu2"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_column="22"
            android:layout_row="1"
            android:src="@drawable/people" />

        <Button
            android:id="@+id/bAUsers"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="23"
            android:layout_row="1"
            android:text="Users" />

        <ImageView
            android:id="@+id/iMenu3"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_column="22"
            android:layout_row="2"
            android:src="@drawable/device_manager" />

        <Button
            android:id="@+id/bADevices"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="23"
            android:layout_row="2"
            android:text="Devices" />

        <ImageView
            android:id="@+id/iMenu4"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_column="22"
            android:layout_row="3"
            android:src="@drawable/stock_notes" />

        <Button
            android:id="@+id/bANotes"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="23"
            android:layout_row="3"
            android:text="Post-Its" />

        <ImageView
            android:id="@+id/iMenu5"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_column="22"
            android:layout_row="4"
            android:src="@drawable/system_config_services" />

        <Button
            android:id="@+id/bASettings"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_column="23"
            android:layout_row="4"
            android:text="Settings" />

        <ImageView
            android:id="@+id/iMenu6"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_column="22"
            android:layout_row="5"
            android:src="@drawable/abc_ic_search" />

        <Button
            android:id="@+id/bAmenu6"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="23"
            android:layout_row="5"
            android:text="bMenu6" />

        <ImageView
            android:id="@+id/iMenu7"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_column="22"
            android:layout_row="6"
            android:src="@drawable/abc_ic_search" />

        <Button
            android:id="@+id/bAmenu7"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="23"
            android:layout_row="6"
            android:text="bMenu7" />

        <ImageView
            android:id="@+id/iMenu8"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_column="22"
            android:layout_row="7"
            android:src="@drawable/abc_ic_search" />

        <Button
            android:id="@+id/bAmenu8"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="23"
            android:layout_row="7"
            android:text="bMenu8" />

        <ImageView
            android:id="@+id/iMenu9"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_column="22"
            android:layout_row="8"
            android:src="@drawable/abc_ic_search" />

        <Button
            android:id="@+id/bAmenu9"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="23"
            android:layout_row="8"
            android:text="bMenu9" />
    </GridLayout>


</RelativeLayout>
