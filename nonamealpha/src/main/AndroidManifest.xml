<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.he.arc.romain.claret.p1.g5.alpha" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_fist"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ch.he.arc.romain.claret.p1.g5.alpha.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="ch.he.arc.romain.claret.p1.g5.alpha.Home"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="ch.he.arc.romain.claret.p1.g5.alpha.HOME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ch.he.arc.romain.claret.p1.g5.alpha.MenuAdvanced"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_menu_advanced"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="ch.he.arc.romain.claret.p1.g5.alpha.PostIts"
            android:label="@string/title_activity_post_its" >
        </activity>
        <activity
            android:name="ch.he.arc.romain.claret.p1.g5.alpha.ShowPostit"
            android:label="@string/title_activity_show_postit" >
        </activity>
    </application>
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
